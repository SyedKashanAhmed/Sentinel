{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('workspace'), '/Microsoft.SecurityInsights/AzureActivity-SampleRule')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "apiVersion": "2022-12-01-preview",
      "location": "[resourceGroup().location]",
      "kind": "Scheduled",
      "properties": {
        "displayName": "AzureActivity | take 10 - Sample Rule",
        "description": "Test rule to validate Detection as Code pipeline using a basic KQL query.",
        "severity": "Low",
        "enabled": true,
        "query": "AzureActivity | take 10",
        "queryFrequency": "PT1H",
        "queryPeriod": "PT1H",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "suppressionEnabled": false,
        "tactics": [],
        "alertRuleTemplateName": null
      }
    }
  ]
}
